# Database Configuration
DB_HOST=production-db-server.mysql.database.azure.com
DB_PORT=3306
DB_USER=admin_user
DB_PASSWORD=your_strong_password
DB_NAME=eyesmile
DB_SSL_MODE=require

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# CORS Settings
ALLOWED_ORIGINS=https://eyesmile-prod.azurewebsites.net

# Azure Storage Configuration (本番環境用に更新してください)
AZURE_STORAGE_CONNECTION_STRING=your_production_connection_string
AZURE_STORAGE_CONTAINER_NAME=product-images

# Azure OpenAI Configuration (本番環境用に更新してください)
AZURE_OPENAI_ENDPOINT=https://your-production-openai.openai.azure.com/
AZURE_OPENAI_API_KEY=your_production_api_key
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-large

# Production Flag
PRODUCTION=true 